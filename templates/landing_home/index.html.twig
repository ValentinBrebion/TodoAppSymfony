{% extends 'base.html.twig' %}

{% block body %}
<style>
    .introductionTodo { 
        height: 100vh;
        padding: 3rem;
        background: linear-gradient(300deg,deepskyblue,darkviolet,blue);
        background-size: 180% 180%;
        animation: gradient-animation 18s ease infinite;
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        color: white;
    }
    @keyframes gradient-animation {
        0% {
            background-position: 0% 50%;
        }
        50% {
            background-position: 100% 50%;
        }
        100% {
            background-position: 0% 50%;
        }
    }
    .introductionTodo__title {
        font-size: 5rem;
        margin-top:0px;
    }
    .introductionTodo__description {
        font-size: 2rem;
        margin-top:0px;
    }
    .introductionTodo__CTA {
        display: flex;
        flex-direction: row;
        justify-content: space-between; /* Espace entre les boutons */
        align-items: center; /* Centrer verticalement */
        width: 50%; /* Taille du conteneur des boutons */
        max-width: 500px; /* Largeur maximale */
        margin-top: 2rem; /* Marge en haut pour séparer des autres éléments */
    }

    .introductionTodo__CTA a {
        flex: 1;
        margin: 0 1rem; /* Espacement entre les boutons */
        padding: 1rem 2rem; /* Taille des boutons */
        background-color: white;
        color: blue;
        border: none;
        border-radius: 0.5rem;
        font-size: 1.2rem;
        cursor: pointer;
        text-decoration: none;
    }

    .introductionTodo__CTA button:hover {
        background-color: lightgray;
    }

</style>

<main>
    <section class="introductionTodo">
        <h1 class="introductionTodo__title">Bienvenue sur la todoList du futur !</h1>

        <p class="introductionTodo__description">Retrouvez l'ensemble des fonctionnalités listés sur la page et connectez vous pour créer votre propre page
        todoList !</p>

        <div class="introductionTodo__CTA">
            <a href="{{ path('app_connexion') }}">Se connecter</a>
            <a href="{{ path('app_inscription') }}">S'inscrire</a>
        </div>
    </section>
</main>
{% endblock %}
